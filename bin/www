#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('ls-server:server');
var http = require('http');
const https = require('https');
const fs = require('fs');

const mqttUtils = require('../lib/mqtt_utils');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var serverHttp = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

serverHttp.listen(port);
serverHttp.on('error', onError);
serverHttp.on('listening', onListeningHttp);


//Https server
const keyFilePath = '/usr/local/ls-apps/cert/www.lengshuotech.com.key';
const certFilePath = '/usr/local/ls-apps/cert/www.lengshuotech.com.pem';
const options = {
  key: fs.readFileSync(keyFilePath),
  cert: fs.readFileSync(certFilePath)
};

var serverHttps = https.createServer(options, app)
serverHttps.listen(3002);
serverHttps.on('error', onError);
serverHttps.on('listening', onListeningHttps);

//Start MQTT client
mqttUtils.connectMqtt();

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListeningHttp() {
  var addr = serverHttp.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}

function onListeningHttps() {
  var addr = serverHttps.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
